<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css/bootstrap.css")
    @Scripts.Render("~/Content/css/bootstrap.min.js")
    @Scripts.Render("~/Content/script/sweetalert2.all.min.js")

    <link rel="icon" type="image/x-icon" href="~/Content\img\favicon.ico" />
    <!--  Bootstrap Bundle JS (รวม Popper แล้ว) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!--  Select2 -->
    @*<script src="~/Scripts/select2/select2.min.js"></script>*@

    <!--  SweetAlert2 -->
    @*<script src="~/Content/file-script/sweetalert2.min.css"></script>*@
    <link href="~/Content/file-script/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/Content/file-script/sweetalert2.min.js"></script>

</head>

<body>
    <nav class="navbar navbar-light bg-white border-bottom">
        <div class="container">
            <div class="d-flex align-items-center w-100">

                <!-- Logo -->
                <img src="~/Content/img/TSE.png" height="45" alt="TSE Logo" class="me-3">

                <!-- Title -->
                <h4 class="mb-0 text-uppercase">
                    CIC CONTROL SYSTEM MANAGER APPROVE
                </h4>

            </div>
        </div>
    </nav>

    <!-- Footter -->
    <div class="container body-content">
        @RenderBody()
        @*<hr />*@
        <footer class="bg-light py-2">
            <div class="container d-flex justify-content-between align-items-center">
                <p class="mb-0">
                    Copyright © @DateTime.Now.Year -
                    <a href="https://www.ts-engineering.com/" target="_blank">
                        THAI SUMMIT ENGINEERING Co., Ltd.
                    </a>
                </p>

                <span class="text-muted">
                    Version 1.0.1
                </span>
            </div>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
